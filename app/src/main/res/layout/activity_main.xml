<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.assginment_2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="#7eb9c8">

        <TextView
            android:id="@+id/txtNumber"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:background="#ffffff"
            android:gravity="bottom|right"
            android:phoneNumber="false"
            android:singleLine="true"
            android:text="0"
            android:textAlignment="gravity"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCopy"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="clear"
                android:singleLine="false"
                android:text="c"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="#1c406c" />

            <Button
                android:id="@+id/btnMC"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="clearToMemo"
                android:singleLine="false"
                android:text="MC"
                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="#1c406c" />

            <Button
                android:id="@+id/btnMR"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="recordToMemo"
                android:singleLine="false"

                android:text="MR"
                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="#1c406c" />

            <Button
                android:id="@+id/btnMPlus"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="saveToMemo"

                android:singleLine="false"
                android:text="M+"
                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="#1c406c" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_weight="0.04"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.17"

                android:onClick="back"
                android:text="Back"

                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="#1c406c" />

            <Button
                android:id="@+id/btnn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="negative"
                android:text="N"

                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="#1c406c" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="div"
                android:text="/"

                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="#1c406c"
                android:layout_weight="0.07" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberSeven"
                android:singleLine="false"
                android:text="7"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn8"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberEight"
                android:singleLine="false"
                android:text="8"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn9"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberNine"
                android:singleLine="false"
                android:text="9"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnMultiply"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="multiply"
                android:singleLine="false"
                android:text="x"
                android:textSize="20dp"
                android:textStyle="bold"
                android:backgroundTint="#1c406c" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberFour"
                android:singleLine="false"
                android:text="4"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn5"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberFive"
                android:singleLine="false"
                android:text="5"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn6"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberSix"
                android:singleLine="false"
                android:text="6"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnSub"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="sub"
                android:singleLine="false"
                android:text="-"
                android:textSize="25dp"
                android:textStyle="bold"
                android:backgroundTint="#1c406c" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberOne"
                android:singleLine="false"
                android:text="1"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberTwo"
                android:singleLine="false"
                android:text="2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="numberThree"
                android:singleLine="false"
                android:text="3"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnAdd"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.24"
                android:onClick="sum"
                android:singleLine="false"
                android:text="+"
                android:textSize="25dp"
                android:textStyle="bold"
                android:backgroundTint="#1c406c" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnzero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="16.11"
                android:onClick="numberZero"
                android:text="0"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="result"
                android:text="="
                android:textSize="40dp"
                android:textStyle="bold"
                android:backgroundTint="#1c406c" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
